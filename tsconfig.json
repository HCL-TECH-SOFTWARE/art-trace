{
  "compilerOptions": {    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,    
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "noImplicitOverride": true,
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // no DOM APIs
    "lib": ["ES2019"]
  },
  "include": ["./src/**/*"]
}
